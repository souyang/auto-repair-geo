---
import { SITE } from '../config/site';
---

<footer class="bg-primary text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-accent rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" />
            </svg>
          </div>
          <span class="text-xl font-display font-bold">Skyline Auto Repair</span>
        </div>
        <p class="text-gray-300 mb-4">
          Family-owned and operated since 1985. ASE-certified technicians providing honest, reliable auto repair services in Mountain View and surrounding areas.
        </p>
        <div class="flex space-x-4">
          <a href={SITE.social.facebook} class="text-gray-300 hover:text-white transition-colors" aria-label="Facebook">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href={SITE.social.yelp} class="text-gray-300 hover:text-white transition-colors" aria-label="Yelp">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.16 12.73c-.28-.47-.71-.84-1.23-1.05-.52-.21-1.1-.25-1.65-.12-.55.13-1.04.45-1.39.91-.35.46-.54 1.02-.54 1.6 0 .58.19 1.14.54 1.6.35.46.84.78 1.39.91.55.13 1.13.09 1.65-.12.52-.21.95-.58 1.23-1.05.28-.47.4-1.02.4-1.6 0-.58-.12-1.13-.4-1.6zM12.73 20.16c-.47-.28-.84-.71-1.05-1.23-.21-.52-.25-1.1-.12-1.65.13-.55.45-1.04.91-1.39.46-.35 1.02-.54 1.6-.54.58 0 1.14.19 1.6.54.46.35.78.84.91 1.39.13.55.09 1.13-.12 1.65-.21.52-.58.95-1.05 1.23-.47.28-1.02.4-1.6.4-.58 0-1.13-.12-1.6-.4zM3.27 11.84c.47.28.84.71 1.05 1.23.21.52.25 1.1.12 1.65-.13.55-.45 1.04-.91 1.39-.46.35-1.02.54-1.6.54-.58 0-1.14-.19-1.6-.54-.46-.35-.78-.84-.91-1.39-.13-.55-.09-1.13.12-1.65.21-.52.58-.95 1.05-1.23.47-.28 1.02-.4 1.6-.4.58 0 1.13.12 1.6.4zM11.84 3.27c.28.47.71.84 1.23 1.05.52.21 1.1.25 1.65.12.55-.13 1.04-.45 1.39-.91.35-.46.54-1.02.54-1.6 0-.58-.19-1.14-.54-1.6-.35-.46-.84-.78-1.39-.91-.55-.13-1.13-.09-1.65.12-.52.21-.95.58-1.23 1.05-.28.47-.4 1.02-.4 1.6 0 .58.12 1.13.4 1.6z"/>
            </svg>
          </a>
          <a href={SITE.social.google} class="text-gray-300 hover:text-white transition-colors" aria-label="Google">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Info</h3>
        <div class="space-y-3">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-accent mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              <p class="text-gray-300">{SITE.address}</p>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${SITE.phone.replace(/\D/g, '')}`} class="text-gray-300 hover:text-white transition-colors">
              {SITE.phone}
            </a>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={`mailto:${SITE.email}`} class="text-gray-300 hover:text-white transition-colors">
              {SITE.email}
            </a>
          </div>
        </div>
      </div>

      <!-- Hours -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Hours</h3>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-gray-300">Monday - Friday</span>
            <span class="text-white">8 AM - 5 PM</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-300">Saturday</span>
            <span class="text-white">Closed</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-300">Sunday</span>
            <span class="text-white">Closed</span>
          </div>
        </div>
        <div class="mt-4">
          <a href="/appointments" class="inline-block bg-accent text-white px-4 py-2 rounded-lg font-medium hover:bg-accent/90 transition-colors">
            Book Appointment
          </a>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-300 text-sm">
          Â© 2024 Skyline Auto Repair. All rights reserved.
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="/privacy" class="text-gray-300 hover:text-white text-sm transition-colors">Privacy Policy</a>
          <a href="/terms" class="text-gray-300 hover:text-white text-sm transition-colors">Terms of Service</a>
          <a href="/sitemap" class="text-gray-300 hover:text-white text-sm transition-colors">Sitemap</a>
          <a href="/accessibility" class="text-gray-300 hover:text-white text-sm transition-colors">Accessibility</a>
          <a href="/for-ai" class="text-gray-300 hover:text-white text-sm transition-colors">For AI</a>
        </div>
      </div>
    </div>
  </div>
</footer> 