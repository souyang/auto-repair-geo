---
export interface Props {
  title: string;
  summary: string;
  excerpt: string;
  price: string;
  duration: string;
  tags: string[];
  slug: string;
  category: 'maintenance' | 'repair';
}

const { title, summary, excerpt, price, duration, tags, slug, category } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100">
  <div class="p-6">
    <!-- Header -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <div class="text-xl font-display font-semibold text-primary mb-2">
          <a href={`/services/${category}/${slug}`} class="hover:text-accent transition-colors">
            {title}
          </a>
        </div>
        <p class="text-gray-600 text-sm leading-relaxed">{summary}</p>
      </div>
      <div class="ml-4 text-right">
        <div class="text-2xl font-display font-bold text-accent">{price}</div>
        <div class="text-sm text-gray-500">{duration}</div>
      </div>
    </div>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map(tag => (
        <span class="inline-block bg-surface text-primary text-xs px-2 py-1 rounded-full">
          {tag}
        </span>
      ))}
    </div>

    <!-- Excerpt -->
    <p class="text-gray-700 mb-4 leading-relaxed">{excerpt}</p>

    <!-- CTA -->
    <div class="flex items-center justify-between">
      <a 
        href={`/services/${category}/${slug}`}
        class="inline-flex items-center text-accent font-medium hover:text-accent/80 transition-colors"
        aria-label={`Learn more about ${title}`}
      >
        Learn More
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      <a 
        href="/appointments"
        class="inline-flex items-center bg-accent text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-accent/90 transition-colors focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2"
      >
        Book Now
      </a>
    </div>
  </div>
</article> 