---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import MapEmbed from '../components/MapEmbed.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { SITE } from '../config/site';

const breadcrumbItems = [
  { label: 'Home', url: '/' },
  { label: 'Contact', url: '/contact' }
];
---

<BaseLayout 
  title="Contact Us - Skyline Auto Repair"
  description="Contact Skyline Auto Repair in Mountain View, CA. Get in touch for appointments, estimates, or any questions about our auto repair services."
>
  <div class="bg-surface py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbItems} />
      
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-primary mb-4">
          Contact Us
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Get in touch with us for appointments, estimates, or any questions about our auto repair services.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-display font-bold text-primary mb-6">
              Get In Touch
            </h2>
            
            <div class="space-y-6">
              <!-- Address -->
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary mb-1">Address</h3>
                  <p class="text-gray-600">{SITE.address}</p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary mb-1">Phone</h3>
                  <a 
                    href={`tel:${SITE.phone.replace(/\D/g, '')}`}
                    class="text-accent hover:text-accent/80 transition-colors"
                  >
                    {SITE.phone}
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary mb-1">Email</h3>
                  <a 
                    href={`mailto:${SITE.email}`}
                    class="text-accent hover:text-accent/80 transition-colors"
                  >
                    {SITE.email}
                  </a>
                </div>
              </div>

              <!-- Hours -->
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-primary mb-1">Hours</h3>
                  <div class="text-gray-600 space-y-1">
                    <p>Monday - Friday: 8 AM - 5 PM</p>
                    <p>Saturday: Closed</p>
                    <p>Sunday: Closed</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Service Areas -->
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">
              Service Areas
            </h3>
            <div class="grid grid-cols-2 gap-2">
              {SITE.areaServed.map(area => (
                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-600">{area}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Emergency Contact -->
          <div class="bg-accent text-white p-6 rounded-lg">
            <h3 class="text-xl font-display font-semibold mb-2">
              Emergency Service
            </h3>
            <p class="text-accent-100 mb-4">
              For emergency roadside assistance or urgent repairs, please call us directly.
            </p>
            <a 
              href={`tel:${SITE.phone.replace(/\D/g, '')}`}
              class="inline-flex items-center bg-white text-accent px-4 py-2 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call Now
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <ContactForm 
            title="Send Us a Message"
            description="Fill out the form below and we'll get back to you as soon as possible."
          />
        </div>
      </div>

      <!-- Map Section -->
      <section class="mt-16">
        <h2 class="text-2xl font-display font-bold text-primary mb-6 text-center">
          Find Us
        </h2>
        <MapEmbed address={SITE.address} />
      </section>
    </div>
  </div>
</BaseLayout> 