---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { SITE } from '../config/site';

const breadcrumbItems = [
  { label: 'Home', url: '/' },
  { label: 'Terms of Service', url: '/terms' }
];

const lastUpdated = 'January 15, 2024';
---

<BaseLayout 
  title="Terms of Service | Skyline Auto Repair"
  description="Read Skyline Auto Repair's terms of service. Learn about website usage, service agreements, liability, and user obligations."
>
  <div class="bg-surface py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbItems} />
      
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-primary mb-4">
          Terms of Service
        </h1>
        <p class="text-xl text-gray-600">
          Terms and conditions for using our website and services
        </p>
        <p class="text-sm text-gray-500 mt-2">Last updated: {lastUpdated}</p>
      </div>

      <!-- Introduction -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Agreement to Terms
        </h2>
        <p class="text-gray-700 mb-4">
          These Terms of Service ("Terms") govern your use of the Skyline Auto Repair website and services. By accessing or using our website, you agree to be bound by these Terms and all applicable laws and regulations.
        </p>
        <p class="text-gray-700">
          If you do not agree with any of these terms, you are prohibited from using or accessing this site. The materials contained in this website are protected by applicable copyright and trademark law.
        </p>
      </section>

      <!-- Website Usage -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Website Usage License
        </h2>
        
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Permitted Use</h3>
            <p class="text-gray-700 mb-3">
              We grant you a limited, non-exclusive, non-transferable license to access and use our website for personal, non-commercial purposes, subject to these Terms.
            </p>
            <ul class="list-disc list-inside text-gray-700 space-y-1 ml-4">
              <li>Browse and view website content</li>
              <li>Contact us for services</li>
              <li>Access information about our services</li>
              <li>Use interactive features as intended</li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Prohibited Activities</h3>
            <p class="text-gray-700 mb-3">
              You may not use our website for any unlawful purpose or in any way that could damage, disable, overburden, or impair the site.
            </p>
            <ul class="list-disc list-inside text-gray-700 space-y-1 ml-4">
              <li>Attempt to gain unauthorized access to our systems</li>
              <li>Use automated tools to scrape or collect data</li>
              <li>Transmit viruses, malware, or harmful code</li>
              <li>Interfere with website functionality</li>
              <li>Use the site for commercial purposes without permission</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Service Terms -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Auto Repair Services
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Service Agreement</h3>
            <p class="text-gray-700 mb-3">
              When you schedule services with us, you agree to:
            </p>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Provide accurate vehicle information</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Pay for services as agreed</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Follow our safety and drop-off procedures</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Service Limitations</h3>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Services subject to vehicle condition and availability</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Warranty coverage as specified in service agreements</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Additional repairs may be required for safety</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Intellectual Property -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Intellectual Property Rights
        </h2>
        
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Our Content</h3>
            <p class="text-gray-700 mb-3">
              All content on this website, including but not limited to text, graphics, logos, images, and software, is the property of Skyline Auto Repair and is protected by copyright laws.
            </p>
            <ul class="list-disc list-inside text-gray-700 space-y-1 ml-4">
              <li>Content may not be reproduced without permission</li>
              <li>Commercial use of our content is prohibited</li>
              <li>Attribution must be given when permitted</li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Your Content</h3>
            <p class="text-gray-700 mb-3">
              When you submit content to us (reviews, feedback, etc.), you grant us a non-exclusive, royalty-free license to use, modify, and display that content.
            </p>
            <p class="text-gray-700">
              You represent that you have the right to grant this license and that your content does not violate any third-party rights.
            </p>
          </div>
        </div>
      </section>

      <!-- Disclaimers -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Disclaimers and Limitations
        </h2>
        
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Website Information</h3>
            <p class="text-gray-700 mb-3">
              The information on this website is provided "as is" without warranties of any kind. We strive to provide accurate information but cannot guarantee:
            </p>
            <ul class="list-disc list-inside text-gray-700 space-y-1 ml-4">
              <li>Completeness or accuracy of information</li>
              <li>Uninterrupted website availability</li>
              <li>Freedom from errors or technical issues</li>
              <li>Suitability for your specific needs</li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Service Disclaimers</h3>
            <p class="text-gray-700 mb-3">
              While we provide professional auto repair services, we cannot guarantee:
            </p>
            <ul class="list-disc list-inside text-gray-700 space-y-1 ml-4">
              <li>Specific repair outcomes or results</li>
              <li>Prevention of future vehicle issues</li>
              <li>Compatibility with all vehicle modifications</li>
              <li>Availability of specific parts or services</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Liability -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Limitation of Liability
        </h2>
        
        <div class="space-y-4">
          <p class="text-gray-700">
            To the maximum extent permitted by law, Skyline Auto Repair shall not be liable for any indirect, incidental, special, consequential, or punitive damages, including but not limited to:
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-lg font-display font-semibold text-primary mb-3">Website Use</h3>
              <ul class="space-y-2 text-gray-700">
                <li>Data loss or corruption</li>
                <li>Service interruptions</li>
                <li>Third-party content issues</li>
                <li>Security breaches</li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-lg font-display font-semibold text-primary mb-3">Auto Services</h3>
              <ul class="space-y-2 text-gray-700">
                <li>Vehicle damage during service</li>
                <li>Delays in service completion</li>
                <li>Parts availability issues</li>
                <li>Warranty claim disputes</li>
              </ul>
            </div>
          </div>
          
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-gray-700">
              <strong>Note:</strong> This limitation does not apply to damages caused by our gross negligence or willful misconduct, or where prohibited by law.
            </p>
          </div>
        </div>
      </section>

      <!-- Indemnification -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Indemnification
        </h2>
        
        <p class="text-gray-700 mb-4">
          You agree to indemnify and hold harmless Skyline Auto Repair, its officers, directors, employees, and agents from and against any claims, damages, losses, and expenses arising from:
        </p>
        
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Your use of our website or services</li>
          <li>Your violation of these Terms</li>
          <li>Your violation of any third-party rights</li>
          <li>Your provision of inaccurate information</li>
        </ul>
      </section>

      <!-- Governing Law -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Governing Law and Disputes
        </h2>
        
        <div class="space-y-4">
          <p class="text-gray-700">
            These Terms shall be governed by and construed in accordance with the laws of the State of California, without regard to its conflict of law provisions.
          </p>
          
          <p class="text-gray-700">
            Any disputes arising from these Terms or your use of our website shall be resolved through binding arbitration in Mountain View, California, in accordance with the rules of the American Arbitration Association.
          </p>
          
          <p class="text-gray-700">
            You agree to waive any right to a jury trial and to participate in a class action lawsuit.
          </p>
        </div>
      </section>

      <!-- Changes to Terms -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Changes to Terms
        </h2>
        
        <p class="text-gray-700 mb-4">
          We reserve the right to modify these Terms at any time. Changes will be effective immediately upon posting on our website. Your continued use of our website after changes are posted constitutes acceptance of the new Terms.
        </p>
        
        <p class="text-gray-700">
          We will notify users of significant changes via email or website notice, but it is your responsibility to review these Terms periodically.
        </p>
      </section>

      <!-- Contact Information -->
      <section class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Contact Information
        </h2>
        
        <p class="text-gray-700 mb-4">
          If you have any questions about these Terms of Service, please contact us:
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Contact Details</h3>
            <div class="space-y-2 text-gray-700">
              <div>Phone: {SITE.phone}</div>
              <div>Email: {SITE.email}</div>
              <div>Address: {SITE.address}</div>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Business Hours</h3>
            <div class="space-y-1 text-gray-700">
              <div>Monday - Friday: 8 AM - 5 PM</div>
              <div>Saturday: Closed</div>
              <div>Sunday: Closed</div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <div class="bg-white rounded-lg shadow-lg p-8 text-center">
        <h3 class="text-2xl font-display font-bold text-primary mb-4">
          Ready to Schedule Service?
        </h3>
        <p class="text-gray-600 mb-6">
          Contact us today for honest, reliable auto repair in Mountain View and surrounding areas.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={`tel:${SITE.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center justify-center px-6 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent/90 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call {SITE.phone}
          </a>
          <a 
            href="/appointments" 
            class="inline-flex items-center justify-center px-6 py-3 border-2 border-accent text-accent font-semibold rounded-lg hover:bg-accent hover:text-white transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Book Appointment
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 