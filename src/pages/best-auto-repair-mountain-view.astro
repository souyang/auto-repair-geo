---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { SITE } from '../config/site';

const breadcrumbItems = [
  { label: 'Home', url: '/' },
  { label: 'Best Auto Repair Mountain View', url: '/best-auto-repair-mountain-view' }
];

const reasons = [
  {
    title: "40+ Years of Experience",
    description: "Family-owned since 1985, serving Mountain View with honest, reliable service",
    icon: "üèÜ"
  },
  {
    title: "ASE Certified Technicians",
    description: "All our technicians are ASE certified and continuously trained on the latest automotive technology",
    icon: "üîß"
  },
  {
    title: "Competitive Pricing",
    description: "Save 20-40% compared to dealership rates while getting the same quality work",
    icon: "üí∞"
  },
  {
    title: "Local Convenience",
    description: "Located in the heart of Mountain View, easy access from major roads and highways",
    icon: "üìç"
  },
  {
    title: "Comprehensive Warranty",
    description: "All our work comes with a comprehensive warranty for your peace of mind",
    icon: "üõ°Ô∏è"
  },
  {
    title: "Honest Service",
    description: "We believe in transparent communication and honest pricing - no hidden fees",
    icon: "ü§ù"
  }
];

const services = [
  "Oil changes and fluid services",
  "Brake inspection and repair",
  "Engine diagnostics and repair",
  "Transmission service",
  "Electrical system diagnostics",
  "Air conditioning service",
  "Suspension and steering repair",
  "Exhaust system service",
  "Hybrid and EV service",
  "Timing belt replacement"
];
---

<BaseLayout 
  title="Best Auto Repair in Mountain View, CA | Skyline Auto Repair"
  description="Looking for the best auto repair in Mountain View? Skyline Auto Repair offers ASE-certified service, competitive pricing, and 40+ years of experience. Family-owned since 1985."
>
  <div class="bg-surface py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbItems} />
      
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-primary mb-4">
          Best Auto Repair in Mountain View, CA
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Looking for reliable auto repair in Mountain View? Skyline Auto Repair has been serving the community since 1985 with honest, quality service at fair prices.
        </p>
      </div>

      <!-- Why Choose Skyline -->
      <section class="mb-12">
        <h2 class="text-3xl font-display font-bold text-primary mb-8 text-center">
          Why Skyline Auto Repair is the Best Choice in Mountain View
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {reasons.map(reason => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="text-4xl mb-4">{reason.icon}</div>
              <h3 class="text-lg font-display font-semibold text-primary mb-2">
                {reason.title}
              </h3>
              <p class="text-gray-600 text-sm">{reason.description}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- What Makes Us Different -->
      <section class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <h2 class="text-3xl font-display font-bold text-primary mb-6">
          What Makes Us Different from Other Mountain View Auto Shops
        </h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Family-Owned Since 1985</h3>
            <p class="text-gray-700 mb-4">
              Unlike corporate chains, we're a family business that treats every customer like family. Our commitment to honest service and fair pricing hasn't changed in over 40 years.
            </p>
            <p class="text-gray-700">
              We're not just another auto shop - we're your neighbors, and we're invested in keeping the Mountain View community running smoothly.
            </p>
          </div>
          
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Local Expertise</h3>
            <p class="text-gray-700 mb-4">
              We understand the unique driving conditions in Mountain View and the Bay Area. From tech workers' daily commutes to weekend trips to the coast, we know what your vehicle needs.
            </p>
            <p class="text-gray-700">
              Our technicians are familiar with the specific challenges of Bay Area driving, from stop-and-go traffic to mountain roads.
            </p>
          </div>
        </div>
      </section>

      <!-- Our Services -->
      <section class="mb-12">
        <h2 class="text-3xl font-display font-bold text-primary mb-8 text-center">
          Comprehensive Auto Repair Services
        </h2>
        
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-xl font-display font-semibold text-primary mb-4">All Makes and Models</h3>
              <p class="text-gray-700 mb-4">
                We service all makes and models, from domestic to import vehicles. Our ASE-certified technicians have experience with:
              </p>
              <ul class="space-y-2 text-gray-700">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Toyota, Honda, Lexus, Nissan</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>BMW, Mercedes, Audi, Volkswagen</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Ford, Chevrolet, Dodge</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span>Hybrid and electric vehicles</span>
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-xl font-display font-semibold text-primary mb-4">Complete Service Menu</h3>
              <p class="text-gray-700 mb-4">
                From routine maintenance to complex repairs, we handle everything your vehicle needs:
              </p>
              <div class="grid grid-cols-1 gap-2">
                {services.map(service => (
                  <div class="flex items-center text-gray-700">
                    <svg class="w-4 h-4 text-accent mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    {service}
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Customer Reviews -->
      <section class="mb-12">
        <h2 class="text-3xl font-display font-bold text-primary mb-8 text-center">
          What Mountain View Customers Say
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center mb-4">
              <div class="flex text-yellow-400">
                {Array.from({ length: 5 }).map(() => (
                  <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            </div>
            <p class="text-gray-700 mb-4">
              "Skyline Auto Repair is the best in Mountain View! Honest pricing, quality work, and they stand behind their service. Been going here for 10 years."
            </p>
            <p class="text-sm font-semibold text-primary">- Sarah M., Mountain View</p>
          </div>

          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center mb-4">
              <div class="flex text-yellow-400">
                {Array.from({ length: 5 }).map(() => (
                  <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            </div>
            <p class="text-gray-700 mb-4">
              "Found them when my check engine light came on. They diagnosed the problem quickly and saved me hundreds compared to the dealer."
            </p>
            <p class="text-sm font-semibold text-primary">- Mike T., Mountain View</p>
          </div>

          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center mb-4">
              <div class="flex text-yellow-400">
                {Array.from({ length: 5 }).map(() => (
                  <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            </div>
            <p class="text-gray-700 mb-4">
              "Family-owned business that treats you like family. They're honest about what needs to be fixed and what can wait."
            </p>
            <p class="text-sm font-semibold text-primary">- Jennifer L., Mountain View</p>
          </div>
        </div>
      </section>

      <!-- Location & Hours -->
      <section class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <h2 class="text-3xl font-display font-bold text-primary mb-6">
          Convenient Mountain View Location
        </h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Visit Us</h3>
            <div class="space-y-3 text-gray-700">
              <p class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
                <span>{SITE.address}</span>
              </p>
              <p class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
                <span>{SITE.phone}</span>
              </p>
              <p class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                <span>{SITE.hours}</span>
              </p>
            </div>
          </div>
          
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Service Area</h3>
            <p class="text-gray-700 mb-4">
              We serve Mountain View and surrounding communities:
            </p>
            <div class="grid grid-cols-2 gap-2 text-gray-700">
              {SITE.areaServed.map(area => (
                <div class="flex items-center">
                  <svg class="w-4 h-4 text-accent mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {area}
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <div class="bg-accent text-white rounded-lg shadow-lg p-8 text-center">
        <h3 class="text-2xl font-display font-bold mb-4">
          Experience the Best Auto Repair in Mountain View
        </h3>
        <p class="text-lg mb-6">
          Join thousands of satisfied customers who choose Skyline Auto Repair for honest, reliable service at fair prices.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={`tel:${SITE.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-accent font-semibold rounded-lg hover:bg-gray-100 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call {SITE.phone}
          </a>
          <a 
            href="/appointments" 
            class="inline-flex items-center justify-center px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-accent transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Schedule Service
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 