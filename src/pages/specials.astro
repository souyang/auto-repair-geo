---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { SITE } from '../config/site';

const breadcrumbItems = [
  { label: 'Home', url: '/' },
  { label: 'Specials', url: '/specials' }
];



const specials = [
  {
    id: 'spring-maintenance',
    title: 'Spring Maintenance Special',
    description: 'Get your vehicle ready for spring with our comprehensive maintenance package.',
    discount: '20% OFF',
    originalPrice: '$299.99',
    salePrice: '$239.99',
    includes: [
      'Oil change with full-synthetic oil',
      'Multi-point inspection',
      'Tire rotation and balance',
      'Brake inspection',
      'Air filter replacement'
    ],
    validUntil: '2024-06-30',
    code: 'SPRING2024',
    featured: true
  },
  {
    id: 'brake-special',
    title: 'Brake Service Special',
    description: 'Complete brake service including pads, rotors, and fluid check.',
    discount: '15% OFF',
    originalPrice: '$399.99',
    salePrice: '$339.99',
    includes: [
      'Front brake pad replacement',
      'Brake rotor resurfacing',
      'Brake fluid check and top-off',
      'Brake system inspection',
      'Road test'
    ],
    validUntil: '2024-12-31',
    code: 'BRAKE15',
    featured: true
  },
  {
    id: 'first-time',
    title: 'First-Time Customer Special',
    description: 'New customers get a free diagnostic check with any service.',
    discount: 'FREE',
    originalPrice: '$89.99',
    salePrice: '$0.00',
    includes: [
      'Comprehensive diagnostic scan',
      'Written estimate',
      'No obligation to proceed with repairs'
    ],
    validUntil: '2024-12-31',
    code: 'NEWCUSTOMER',
    featured: false
  },
  {
    id: 'hybrid-service',
    title: 'Hybrid Vehicle Service',
    description: 'Specialized service for hybrid and electric vehicles.',
    discount: '10% OFF',
    originalPrice: '$199.99',
    salePrice: '$179.99',
    includes: [
      'Hybrid battery system check',
      'Regenerative braking inspection',
      'Electric motor diagnostics',
      'Battery cooling system check'
    ],
    validUntil: '2024-08-31',
    code: 'HYBRID10',
    featured: false
  }
];
---

<BaseLayout 
  title="Auto Repair Specials & Coupons - Skyline Auto Repair"
  description="Save money on auto repair and maintenance services with our current specials and coupons. Valid offers for Mountain View, CA area."
>
  <div class="bg-surface py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbItems} />
      
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-primary mb-4">
          Current Specials & Coupons
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Save money on quality auto repair and maintenance services. All offers include our comprehensive warranty.
        </p>
      </div>

      <!-- Featured Specials -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold text-primary mb-8 text-center">
          Featured Offers
        </h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {specials.filter(s => s.featured).map(special => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden border-2 border-accent">
              <div class="bg-accent text-white p-6 text-center">
                <div class="text-4xl font-display font-bold mb-2">{special.discount}</div>
                <h3 class="text-xl font-display font-semibold">{special.title}</h3>
              </div>
              
              <div class="p-6">
                <p class="text-gray-600 mb-4">{special.description}</p>
                
                <div class="flex items-center justify-center space-x-4 mb-6">
                  <span class="text-gray-500 line-through">{special.originalPrice}</span>
                  <span class="text-3xl font-display font-bold text-accent">{special.salePrice}</span>
                </div>
                
                <div class="mb-6">
                  <div class="font-semibold text-primary mb-2">Includes:</div>
                  <ul class="space-y-1">
                    {special.includes.map(item => (
                      <li class="flex items-center text-sm text-gray-600">
                        <svg class="w-4 h-4 text-accent mr-2" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <div class="bg-gray-50 p-4 rounded-lg mb-6">
                  <div class="text-center">
                    <p class="text-sm text-gray-600 mb-2">Use Code:</p>
                    <p class="text-lg font-mono font-bold text-accent">{special.code}</p>
                  </div>
                </div>
                
                <div class="text-center">
                  <a 
                    href="/appointments" 
                    class="inline-block w-full bg-accent text-white px-6 py-3 rounded-lg font-semibold hover:bg-accent/90 transition-colors"
                  >
                    Book This Special
                  </a>
                </div>
                
                <p class="text-xs text-gray-500 text-center mt-4">
                  Valid until {new Date(special.validUntil).toLocaleDateString()}
                </p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- All Specials -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold text-primary mb-8 text-center">
          All Current Specials
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {specials.map(special => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="bg-gradient-to-r from-accent to-accent/80 text-white p-4 text-center">
                <div class="text-2xl font-display font-bold mb-1">{special.discount}</div>
                <h3 class="text-lg font-display font-semibold">{special.title}</h3>
              </div>
              
              <div class="p-6">
                <p class="text-gray-600 text-sm mb-4">{special.description}</p>
                
                <div class="flex items-center justify-center space-x-3 mb-4">
                  <span class="text-gray-500 line-through text-sm">{special.originalPrice}</span>
                  <span class="text-xl font-display font-bold text-accent">{special.salePrice}</span>
                </div>
                
                <div class="mb-4">
                  <div class="font-semibold text-primary mb-2 text-sm">Includes:</div>
                  <ul class="space-y-1">
                    {special.includes.slice(0, 3).map(item => (
                      <li class="flex items-center text-xs text-gray-600">
                        <svg class="w-3 h-3 text-accent mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        {item}
                      </li>
                    ))}
                    {special.includes.length > 3 && (
                      <li class="text-xs text-gray-500">+{special.includes.length - 3} more items</li>
                    )}
                  </ul>
                </div>
                
                <div class="bg-gray-50 p-3 rounded mb-4">
                  <div class="text-center">
                    <p class="text-xs text-gray-600 mb-1">Code:</p>
                    <p class="font-mono font-bold text-accent">{special.code}</p>
                  </div>
                </div>
                
                <div class="text-center">
                  <a 
                    href="/appointments" 
                    class="inline-block w-full bg-accent text-white px-4 py-2 rounded text-sm font-semibold hover:bg-accent/90 transition-colors"
                  >
                    Book Now
                  </a>
                </div>
                
                <p class="text-xs text-gray-500 text-center mt-3">
                  Valid until {new Date(special.validUntil).toLocaleDateString()}
                </p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Terms & Conditions -->
      <section class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-display font-bold text-primary mb-6">
          Terms & Conditions
        </h2>
        
        <div class="prose prose-sm text-gray-700 space-y-4">
          <ul class="space-y-2">
            <li>All specials are valid for new and existing customers</li>
            <li>Offers cannot be combined with other promotions</li>
            <li>Valid only at Skyline Auto Repair location in Mountain View, CA</li>
            <li>Must mention coupon code when booking appointment</li>
            <li>All work includes our comprehensive warranty</li>
            <li>Offers subject to change without notice</li>
            <li>Valid vehicle inspection may be required</li>
            <li>Some restrictions may apply</li>
          </ul>
          
          <p class="text-sm text-gray-600">
            For questions about our specials or to book an appointment, please call us at {SITE.phone} or use our online booking system.
          </p>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="text-center mt-16">
        <h2 class="text-3xl font-display font-bold text-primary mb-4">
          Ready to Save on Your Auto Service?
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          Book your appointment today and take advantage of our current specials. Limited time offers available.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/appointments" 
            class="inline-flex items-center justify-center px-8 py-4 bg-accent text-white font-semibold rounded-lg hover:bg-accent/90 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Book Appointment
          </a>
          <a 
            href={`tel:${SITE.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-accent text-accent font-semibold rounded-lg hover:bg-accent hover:text-white transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call {SITE.phone}
          </a>
        </div>
      </section>
    </div>
  </div>
</BaseLayout> 