---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { SITE } from '../config/site';

const breadcrumbItems = [
  { label: 'Home', url: '/' },
  { label: 'Dealer vs Independent', url: '/dealer-vs-independent' }
];

const comparisonData = [
  {
    category: "Pricing",
    dealer: {
      pros: ["Warranty coverage", "OEM parts guarantee"],
      cons: ["20-40% higher costs", "More expensive labor rates", "Often push unnecessary services"]
    },
    independent: {
      pros: ["20-40% lower costs", "Competitive pricing", "Honest recommendations"],
      cons: ["May not have all OEM parts", "Limited warranty on some parts"]
    }
  },
  {
    category: "Expertise",
    dealer: {
      pros: ["Factory-trained technicians", "Latest diagnostic equipment", "Access to technical bulletins"],
      cons: ["Limited to one brand", "May lack experience with older models"]
    },
    independent: {
      pros: ["Experience with all makes/models", "ASE certified technicians", "Real-world problem solving"],
      cons: ["May not have brand-specific tools", "Limited access to some technical data"]
    }
  },
  {
    category: "Convenience",
    dealer: {
      pros: ["Loaner cars available", "Shuttle service", "Extended hours"],
      cons: ["Often require appointments", "May be farther away", "Limited weekend hours"]
    },
    independent: {
      pros: ["Flexible scheduling", "Local convenience", "Personal service", "Weekend availability"],
      cons: ["Limited loaner cars", "May have smaller facilities"]
    }
  },
  {
    category: "Warranty",
    dealer: {
      pros: ["Full warranty coverage", "Extended warranty options", "Roadside assistance"],
      cons: ["Higher costs for warranty work", "May void aftermarket warranties"]
    },
    independent: {
      pros: ["Competitive warranty terms", "Honest warranty claims", "Stand behind their work"],
      cons: ["May not cover all OEM parts", "Limited roadside assistance"]
    }
  }
];
---

<BaseLayout 
  title="Dealer vs Independent Auto Repair: Which is Better? | Skyline Auto Repair"
  description="Compare dealer vs independent auto repair shops. Learn about pricing, expertise, convenience, and warranty differences. Expert auto repair in Mountain View, CA."
>
  <div class="bg-surface py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbItems} />
      
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-primary mb-4">
          Dealer vs Independent Auto Repair: Which is Better?
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Choosing between a dealership and independent shop? Learn the pros and cons of each option to make the best decision for your vehicle.
        </p>
      </div>

      <!-- Quick Answer -->
      <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <h2 class="text-2xl font-display font-bold text-primary mb-4">
          The Bottom Line
        </h2>
        <p class="text-lg text-gray-700 mb-4">
          For most repairs and maintenance, independent shops like Skyline Auto Repair offer better value, more honest service, and the same quality work as dealerships - often at 20-40% lower costs.
        </p>
        <p class="text-gray-600">
          Dealerships excel at warranty work and brand-specific issues, while independent shops shine at routine maintenance, common repairs, and providing honest, personalized service.
        </p>
      </div>

      <!-- Detailed Comparison -->
      <div class="space-y-8">
        {comparisonData.map(item => (
          <section class="bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-2xl font-display font-bold text-primary mb-6">
              {item.category}
            </h3>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Dealer -->
              <div class="border-2 border-gray-200 rounded-lg p-6">
                <h4 class="text-xl font-display font-semibold text-primary mb-4 flex items-center">
                  <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Dealership
                </h4>
                
                <div class="space-y-4">
                  <div>
                    <h5 class="font-semibold text-green-600 mb-2">Pros:</h5>
                    <ul class="space-y-1 text-gray-700">
                      {item.dealer.pros.map(pro => (
                        <li class="flex items-start">
                          <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                          {pro}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div>
                    <h5 class="font-semibold text-red-600 mb-2">Cons:</h5>
                    <ul class="space-y-1 text-gray-700">
                      {item.dealer.cons.map(con => (
                        <li class="flex items-start">
                          <svg class="w-4 h-4 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                          </svg>
                          {con}
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Independent -->
              <div class="border-2 border-accent rounded-lg p-6">
                <h4 class="text-xl font-display font-semibold text-primary mb-4 flex items-center">
                  <svg class="w-6 h-6 mr-2 text-accent" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  Independent Shop
                </h4>
                
                <div class="space-y-4">
                  <div>
                    <h5 class="font-semibold text-green-600 mb-2">Pros:</h5>
                    <ul class="space-y-1 text-gray-700">
                      {item.independent.pros.map(pro => (
                        <li class="flex items-start">
                          <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                          {pro}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div>
                    <h5 class="font-semibold text-red-600 mb-2">Cons:</h5>
                    <ul class="space-y-1 text-gray-700">
                      {item.independent.cons.map(con => (
                        <li class="flex items-start">
                          <svg class="w-4 h-4 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                          </svg>
                          {con}
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </section>
        ))}
      </div>

      <!-- When to Choose Each -->
      <section class="bg-white rounded-lg shadow-lg p-8 mt-12">
        <h2 class="text-3xl font-display font-bold text-primary mb-6">
          When to Choose Each Option
        </h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Choose a Dealership When:</h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Your vehicle is under factory warranty</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>You need brand-specific diagnostic tools</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>You have a complex electrical or computer issue</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>You need a loaner car during repairs</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Choose an Independent Shop When:</h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>You want to save 20-40% on repairs</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>You need routine maintenance or common repairs</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>You want honest, personalized service</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>You prefer local, family-owned businesses</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Why Choose Skyline -->
      <section class="bg-accent text-white rounded-lg shadow-lg p-8 mt-12">
        <h2 class="text-3xl font-display font-bold mb-6">
          Why Choose Skyline Auto Repair?
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-lg font-display font-semibold mb-2">ASE Certified</h3>
            <p class="text-sm">Our technicians are ASE certified and continuously trained on the latest automotive technology.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-display font-semibold mb-2">40+ Years Experience</h3>
            <p class="text-sm">Family-owned since 1985, serving the Mountain View community with honest, reliable service.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <h3 class="text-lg font-display font-semibold mb-2">Competitive Pricing</h3>
            <p class="text-sm">Save 20-40% compared to dealership rates while getting the same quality work and parts.</p>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <div class="bg-white rounded-lg shadow-lg p-8 mt-12 text-center">
        <h3 class="text-2xl font-display font-bold text-primary mb-4">
          Ready to Experience the Difference?
        </h3>
        <p class="text-gray-600 mb-6">
          Join thousands of satisfied customers who choose Skyline Auto Repair for honest, reliable service at fair prices.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={`tel:${SITE.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center justify-center px-6 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent/90 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call {SITE.phone}
          </a>
          <a 
            href="/appointments" 
            class="inline-flex items-center justify-center px-6 py-3 border-2 border-accent text-accent font-semibold rounded-lg hover:bg-accent hover:text-white transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Schedule Service
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 