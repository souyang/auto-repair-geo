---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { SITE } from '../../config/site';

const breadcrumbItems = [
  { label: 'Home', url: '/' },
  { label: 'Vehicles', url: '/vehicles' },
  { label: 'Toyota', url: '/vehicles/toyota' },
  { label: 'Common Problems', url: '/vehicles/toyota-common-problems' }
];

const commonProblems = [
  {
    model: "Camry",
    years: "2007-2011",
    problems: [
      {
        issue: "Excessive Oil Consumption",
        description: "Engine burns oil faster than normal, requiring frequent top-offs",
        symptoms: ["Low oil between changes", "Blue smoke from exhaust", "Oil warning light"],
        solution: "Engine rebuild or replacement, piston ring replacement"
      },
      {
        issue: "Transmission Issues",
        description: "Automatic transmission problems including shifting issues",
        symptoms: ["Hard shifting", "Slipping gears", "Transmission warning light"],
        solution: "Transmission fluid change, valve body replacement, or rebuild"
      }
    ]
  },
  {
    model: "Corolla",
    years: "2009-2013",
    problems: [
      {
        issue: "CVT Transmission Problems",
        description: "Continuously variable transmission issues with shuddering and noise",
        symptoms: ["Transmission shudder", "Whining noise", "Poor acceleration"],
        solution: "CVT fluid change, transmission replacement if severe"
      },
      {
        issue: "Engine Oil Sludge",
        description: "Oil sludge buildup causing engine damage",
        symptoms: ["Engine knocking", "Poor performance", "Oil pressure issues"],
        solution: "Engine flush, oil change with synthetic oil, engine rebuild if severe"
      }
    ]
  },
  {
    model: "RAV4",
    years: "2013-2018",
    problems: [
      {
        issue: "Hybrid Battery Issues",
        description: "Hybrid battery degradation and failure",
        symptoms: ["Reduced fuel economy", "Battery warning light", "Poor performance"],
        solution: "Battery pack replacement, individual cell replacement"
      },
      {
        issue: "Suspension Noise",
        description: "Front suspension components making noise",
        symptoms: ["Clunking over bumps", "Squeaking sounds", "Poor handling"],
        solution: "Control arm replacement, strut replacement, bushing replacement"
      }
    ]
  },
  {
    model: "Prius",
    years: "2010-2015",
    problems: [
      {
        issue: "Hybrid Battery Failure",
        description: "Battery pack degradation and failure",
        symptoms: ["Reduced fuel economy", "Battery warning", "Engine running more"],
        solution: "Battery pack replacement, individual cell replacement"
      },
      {
        issue: "Inverter Coolant Pump",
        description: "Coolant pump failure affecting hybrid system",
        symptoms: ["Hybrid system warning", "Poor performance", "Overheating"],
        solution: "Coolant pump replacement, system flush"
      }
    ]
  }
];

const maintenanceTips = [
  "Follow the manufacturer's maintenance schedule",
  "Use synthetic oil and change it regularly",
  "Check and maintain proper tire pressure",
  "Keep the battery terminals clean",
  "Inspect brake pads and rotors regularly",
  "Flush coolant system as recommended",
  "Replace timing belt at recommended intervals",
  "Keep air and cabin filters clean"
];
---

<BaseLayout 
  title="Toyota Common Problems & Solutions | Skyline Auto Repair"
  description="Expert diagnosis and repair of common Toyota problems. From oil consumption to transmission issues, our ASE-certified technicians can fix any Toyota issue in Mountain View, CA."
>
  <div class="bg-surface py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumbs items={breadcrumbItems} />
      
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-primary mb-4">
          Toyota Common Problems & Solutions
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          While Toyotas are known for reliability, even the best vehicles can develop issues. Our expert technicians diagnose and repair all Toyota problems.
        </p>
      </div>

      <!-- Overview -->
      <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <h2 class="text-2xl font-display font-bold text-primary mb-4">
          Why Choose Skyline for Toyota Repairs?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Our Toyota Expertise</h3>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>ASE-certified Toyota specialists</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Latest diagnostic equipment</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Genuine Toyota parts available</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Hybrid system expertise</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-lg font-display font-semibold text-primary mb-3">Why Toyotas Develop Issues</h3>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Normal wear and tear over time</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Design flaws in specific model years</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Lack of proper maintenance</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>High mileage stress on components</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Common Problems by Model -->
      <div class="space-y-8">
        {commonProblems.map(model => (
          <section class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-display font-bold text-primary mb-6">
              {model.model} Common Problems ({model.years})
            </h2>
            
            <div class="space-y-6">
              {model.problems.map(problem => (
                <div class="border-l-4 border-accent pl-6">
                  <h3 class="text-lg font-display font-semibold text-primary mb-2">
                    {problem.issue}
                  </h3>
                  <p class="text-gray-700 mb-3">{problem.description}</p>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <h4 class="font-semibold text-gray-800 mb-2">Symptoms:</h4>
                      <ul class="space-y-1 text-gray-600">
                        {problem.symptoms.map(symptom => (
                          <li class="flex items-start">
                            <svg class="w-4 h-4 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                            {symptom}
                          </li>
                        ))}
                      </ul>
                    </div>
                    
                    <div>
                      <h4 class="font-semibold text-gray-800 mb-2">Solutions:</h4>
                      <ul class="space-y-1 text-gray-600">
                        {problem.solution.split(', ').map(solution => (
                          <li class="flex items-start">
                            <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            {solution}
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </section>
        ))}
      </div>

      <!-- Prevention Tips -->
      <section class="bg-white rounded-lg shadow-lg p-8 mt-12">
        <h2 class="text-3xl font-display font-bold text-primary mb-6">
          Preventing Toyota Problems
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Maintenance Tips</h3>
            <ul class="space-y-3 text-gray-700">
              {maintenanceTips.map(tip => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-accent mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {tip}
                </li>
              ))}
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-display font-semibold text-primary mb-4">Early Warning Signs</h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <span>Unusual noises or vibrations</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <span>Dashboard warning lights</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <span>Changes in performance or fuel economy</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <span>Fluid leaks or unusual smells</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <span>Difficulty starting or running</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <div class="bg-white rounded-lg shadow-lg p-8 mt-12 text-center">
        <h3 class="text-2xl font-display font-bold text-primary mb-4">
          Experiencing Toyota Problems?
        </h3>
        <p class="text-gray-600 mb-6">
          Don't let Toyota problems leave you stranded. Our expert technicians can diagnose and repair any Toyota issue quickly and affordably.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={`tel:${SITE.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center justify-center px-6 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent/90 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call {SITE.phone}
          </a>
          <a 
            href="/appointments" 
            class="inline-flex items-center justify-center px-6 py-3 border-2 border-accent text-accent font-semibold rounded-lg hover:bg-accent hover:text-white transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Schedule Toyota Service
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 